@model List<BuggyAppService.Models.EnvVariables>;
@using Markdig;
@{
    ViewData["Title"] = "Env Variables";
}

<h1>Environment Variables</h1>
<h1></h1>
@*@ViewData["EnvVariables"]*@
<div>
   
    @*@Markdown.Parse(@ViewData["EnvVariables"].ToString())*@
    @Markdown.ToHtml(@ViewData["EnvVariables"].ToString())
</div>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>

                <th>Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var envKey in Model)
            {
                <tr>
                    <td>@envKey.Key</td>
                    <td>@envKey.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>

